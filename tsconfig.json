{
  "compilerOptions": {
    "incremental": true,                             
    "target": "es2017",                                  
    "module": "commonjs",                                
    "outDir": "./dist",     
    "baseUrl": ".",
    "rootDir": ".",                              
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "paths": {
      "@domain/*": ["./src/domain/*"],
      "@infra/*": ["./src/infra/*"],
      "@application/*": ["./src/application/*"]
    }
  },
  "include": [
    "src", 
    "tests"
  ]
}
